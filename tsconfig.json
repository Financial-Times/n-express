{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@typings/*": ["typings/*"]
    }
  },
  "include": ["./main.js", "./typings", "./src"],
  "exclude": ["node_modules"]
}
